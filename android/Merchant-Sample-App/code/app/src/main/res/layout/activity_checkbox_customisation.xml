<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckboxCustomisation">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the color of text" />


    <RadioGroup
        android:id="@+id/rg_textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textColor">


        <RadioButton
            android:id="@+id/rb_textRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textColor="@color/error_color"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_textBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textColor="@color/bright_sky_blue"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_textYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textColor="@color/yellow"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tv_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the size of text" />


    <RadioGroup
        android:id="@+id/rg_textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textSize">


        <RadioButton
            android:id="@+id/rb_text10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10sp"
            android:textSize="@dimen/dimen_10sp"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_text15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15sp"
            android:textSize="@dimen/dimen_15sp"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_text20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21sp"
            android:textSize="@dimen/dimen_21sp"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tv_textFont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the font of text" />

    <RadioGroup
        android:id="@+id/rg_textFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textFont">


        <RadioButton
            android:id="@+id/rb_textMonospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monospace"
            android:fontFamily="monospace"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_textSanSerif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sans-serif"
            android:fontFamily="sans-serif"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_textSerif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serif"
            android:fontFamily="serif"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tv_backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_textFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the background color of text and checkbox" />


    <RadioGroup
        android:id="@+id/rg_backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_backgroundColor">


        <RadioButton
            android:id="@+id/rb_bgGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grey"
            android:background="@color/paytm_gray"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_bgGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:background="#00FF00"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_bgPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purple"
            android:background="@color/purple"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tv_checkedColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_backgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the color of checked state of checkbox" />


    <RadioGroup
        android:id="@+id/rg_checkedColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkedColor">


        <RadioButton
            android:id="@+id/rb_cred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textColor="@color/error_color"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_cblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textColor="@color/paytm_dark_blue"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_cyellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textColor="@color/yellow"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tv_uncheckedColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_checkedColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the color of unchecked state of checkbox" />
    <RadioGroup
        android:id="@+id/rg_uncheckedColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_uncheckedColor">


        <RadioButton
            android:id="@+id/rb_ucred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textColor="@color/error_color"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/rb_ucblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textColor="@color/paytm_dark_blue"/>

        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_ucyellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textColor="@color/yellow"/>
        <View
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/rb_none6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:checked="true"/>

    </RadioGroup>

    <Button
        android:id="@+id/proceed_instrumentsPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Proceed to instruments page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_uncheckedColor" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>